    "commands": [
      {
        "command": "/create-plan",
        "description": "Create new waypoint (3-file structure)"
      },
      {
        "command": "/update-context",
        "description": "Update waypoint before context reset"
      },
      {
        "command": "/resume",
        "description": "Resume from existing waypoint"
      }
